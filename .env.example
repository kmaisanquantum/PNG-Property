# ─────────────────────────────────────────────────────────────
# PNG Property Dashboard — Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git
# ─────────────────────────────────────────────────────────────

# Facebook scraper credentials (dedicated scraper account only)
FB_EMAIL=your_scraper_account@gmail.com
FB_PASSWORD=your_secure_password

# MongoDB connection string
MONGODB_URL=mongodb://mongo:27017/png_realestate
# For MongoDB Atlas (production):
# MONGODB_URL=mongodb+srv://user:pass@cluster.mongodb.net/png_realestate

# Redis connection
REDIS_URL=redis://redis:6379
# For Upstash (production):
# REDIS_URL=redis://default:token@host.upstash.io:6379

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development   # development | production

# JWT secret for auth tokens (generate: openssl rand -hex 32)
JWT_SECRET=change_me_to_a_random_64_char_string

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
